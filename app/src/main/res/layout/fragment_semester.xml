<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.semester.semester">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/semester">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sem1"
                android:layout_width="wrap_content"
                android:layout_height="387dp"
                android:layout_weight="1"
                android:src="@drawable/sem1" />

            <ImageView
                android:id="@+id/sem2"
                android:layout_width="wrap_content"
                android:layout_height="407dp"
                android:layout_weight="1"
                android:src="@drawable/sem2" />

            <ImageView
                android:id="@+id/sem3"
                android:layout_width="wrap_content"
                android:layout_height="418dp"
                android:layout_weight="1"
                android:src="@drawable/sem3" />

            <ImageView
                android:id="@+id/sem4"
                android:layout_width="wrap_content"
                android:layout_height="456dp"
                android:layout_weight="1"
                android:src="@drawable/sem4" />

            <ImageView
                android:id="@+id/sem5"
                android:layout_width="wrap_content"
                android:layout_height="392dp"
                android:layout_weight="1"
                android:src="@drawable/sem5" />

            <ImageView
                android:id="@+id/sem6"
                android:layout_width="wrap_content"
                android:layout_height="421dp"
                android:layout_weight="1"
                android:src="@drawable/sem6" />

            <ImageView
                android:id="@+id/sem7"
                android:layout_width="wrap_content"
                android:layout_height="406dp"
                android:layout_weight="1"
                android:src="@drawable/sem7" />

            <ImageView
                android:id="@+id/sem8"
                android:layout_width="wrap_content"
                android:layout_height="436dp"
                android:layout_weight="1"
                android:src="@drawable/sem8" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>